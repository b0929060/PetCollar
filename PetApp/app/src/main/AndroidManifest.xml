<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.PetApp"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">

        <activity android:name=".PetInfoFragment"
            android:exported="false"/>
        <activity android:name=".PetDetailPagerAdapter"
            android:exported="false"/>
        <activity android:name=".HealthStatusFragment"
            android:exported="false"/>
        <activity android:name=".PetAdapter"
            android:exported="false"/>
        <activity android:name=".PetDetailActivity"
            android:exported="false"/>
        <activity
            android:name=".CollarControl"
            android:exported="false"/>
        <activity
            android:name=".HomePage"
            android:exported="false"/>
        <activity
            android:name=".PetList"
            android:exported="false"/>
        <activity
            android:name=".login_register"
            android:exported="false"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>